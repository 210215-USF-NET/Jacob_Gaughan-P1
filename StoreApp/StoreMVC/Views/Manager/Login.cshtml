@model StoreMVC.Models.ManagerCRVM

@{
    ViewData["Title"] = "Manager Login";
}

<h1 class="h1 text-center text-uppercase">Customer</h1>

<div class="text-center">
    <form asp-action="Login" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group w-100 md:w-50 mx-auto">
            <label asp-for="ManagerEmail" class="sr-only"></label>
            <input asp-for="ManagerEmail" placeholder="Email Address" class="form-control" required autofocus />
            <span asp-validation-for="ManagerEmail" class="text-danger"></span>
        </div>
        <div class="form-group w-100 md:w-50 mx-auto">
            <label asp-for="ManagerPassword" class="sr-only"></label>
            <input asp-for="ManagerPassword" placeholder="Password" class="form-control" required />
            <span asp-validation-for="ManagerPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block" />
        </div>
    </form>
    <p class="text-danger">
        @ViewBag.ErrorMessage
    </p>
</div>

<p class="text-center">
    <a asp-action="Create" class="btn btn-secondary">Create new account</a>
</p>