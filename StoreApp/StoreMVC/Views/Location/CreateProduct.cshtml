@model StoreMVC.Models.ProductCRVM

@{
    Layout = "../Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Create New Product";
}

<h1 class="text-3xl">Create new product</h1>

<h2>Location ID: @ViewBag.LocId</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none;">
                <input asp-for="LocationId" value="@ViewBag.LocId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" autofocus/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" type="number" min="0.00" step="0.01"/>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Product" class="btn btn-primary" />
            </div>
        </form>
        <p class="text-danger">
            @ViewBag.ErrorMessage
        </p>
    </div>
</div>