@model StoreMVC.Models.CustomerCRVM

@{
    Layout = "../Shared/CustomerLayout.cshtml";
    ViewData["Title"] = "Customer Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit Info", "Edit", "Customer", new { email = ViewBag.currentCustomerEmail }) |
    @Html.ActionLink("Back to Customer Home", "CustomerIndex", "Customer", new { email = ViewBag.currentCustomerEmail })
</div>
