@model IEnumerable<StoreMVC.Models.LocationIndexVM>

@{
    ViewData["Title"] = "Shop Locations";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@Html.ActionLink("Back to Customer Menu", "CustomerIndex", "Customer", new { custId = ViewBag.CustomerId })

<h1>Choose a location</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td>
                    @Html.ActionLink("Shop Location", "Shop", "Location", new { locId = item.Id, custId = ViewBag.CustomerId })
                </td>
            </tr>
        }
    </tbody>
</table>