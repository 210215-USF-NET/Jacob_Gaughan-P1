@model List<CustomerIndexVM>

@{
    Layout = "../Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "All Customers";
}

<div>
    @Html.ActionLink("View All Locations", "ManagerIndex", "Location", null, new { @class = "btn btn-secondary mb-2" })
</div>

<h1>All Customers</h1>

<input class="input-group my-1 p-1" type="text" id="searchCustInput" onkeyup="searchCustomers()" placeholder="Search by email...">

<div>
    <table id="customerTable" class="table-dark table table-bordered mt-3">
        <thead>
            <tr>
                <th>
                    Customer ID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Customer Email
                </th>
            </tr>
        </thead>

        <tbody id="customers">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.CustomerEmail
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/sortingCustomers.js"></script>