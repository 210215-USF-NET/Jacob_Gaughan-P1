@model IEnumerable<StoreMVC.Models.LocationIndexVM>

@{
    ViewData["Title"] = "Manage Locations";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>Choose a location</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-secondary">Create new location</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td>
                    @Html.ActionLink("Edit Location", "Edit", "Location", new { locId = item.Id }) |
                    @Html.ActionLink("Edit Products", "ManagerProductView", "Location", new { locId = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Location", new { locId = item.Id }, new { @class = "text-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>